<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorGreyBlue</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAppearanceHeadline1">
            @style/TextAppearance.RealEstateManagerStyles.Headline1
        </item>
        <item name="textAppearanceHeadline2">
            @style/TextAppearance.RealEstateManagerStyles.Headline2
        </item>
        <item name="textAppearanceSubtitle1">
            @style/TextAppearance.RealEstateManagerStyles.Subtitle1
        </item>
        <item name="textAppearanceBody1">
            @style/TextAppearance.RealEstateManagerStyles.Body1
        </item>

        <!--COMPONENT-->
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
    </style>

    <!--BASE STYLES-->

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored" />
</resources>