<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DetailFragment">

    <include
        android:id="@+id/fragment_detail_task_information"
        layout="@layout/fragment_detail_task_information_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/basic_marge"
        android:layout_marginTop="@dimen/basic_marge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/fragment_detail_task_description"
        layout="@layout/fragment_detail_task_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/little_marge"
        app:layout_constraintStart_toStartOf="@id/fragment_detail_task_information"
        app:layout_constraintTop_toBottomOf="@id/fragment_detail_task_information" />

    <include
        android:id="@+id/fragment_detail_under_stain_description"
        layout="@layout/fragment_detail_under_stain_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/little_marge"
        app:layout_constraintStart_toStartOf="@id/fragment_detail_task_information"
        app:layout_constraintTop_toBottomOf="@id/fragment_detail_task_description" />


</androidx.constraintlayout.widget.ConstraintLayout>