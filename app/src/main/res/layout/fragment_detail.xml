<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.DetailFragment"
    android:layout_marginBottom="?attr/actionBarSize">

    <include
        android:id="@+id/fragment_detail_task_information"
        layout="@layout/fragment_detail_task_information_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/task_information_margin"
        />

    <include
        android:id="@+id/fragment_detail_task_description"
        layout="@layout/fragment_detail_task_description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/task_information_margin"
        android:layout_marginTop="@dimen/little_marge"
         />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/basic_marge"
        android:layout_marginBottom="?attr/actionBarSize"
        android:text="@string/add_under_stain"
         />

</LinearLayout>
